<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deneme.sqlite2.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/txtAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Adınızı giriniz..."
            android:inputType="textPersonName"
            android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/txtAdres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtAd"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Adresinizi giriniz.."
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:layout_weight="0.06"
                android:weightSum="1">

                <Button
                    android:id="@+id/KaydetBtn"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:text="KAYDET" />

                <Button
                    android:id="@+id/ListeleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LİSTELE" />


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
